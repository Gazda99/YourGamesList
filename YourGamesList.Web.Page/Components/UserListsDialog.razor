<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Choose a List
        </MudText>
    </TitleContent>
    <DialogContent>
        <UserListsStack
            OnListSelect="@OnListSelect"
        ></UserListsStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>



@code {
    [Inject] private ISnackbar Snackbar { get; set; } = default!;

    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    private void Cancel() => MudDialog.Cancel();

    private void OnListSelect(Guid selectedListId)
    {
        Snackbar.Add($"Selected id {selectedListId.ToString()}", Severity.Info);
        Cancel();
    }

}